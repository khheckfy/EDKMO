@model EDKMO.BusinessLogic.DTO.TerritoryDTO
@{
    ViewBag.Title = "РО";
}

@using (Html.BeginForm("Edit", Resources.Controllers.Territories, FormMethod.Post, new { id = "formid", enctype = "multipart/form-data" }))
{
    <div class="form-group">
        <label for="l1">Название</label>
        <input type="text" class="form-control" id="l1" placeholder="Введите имя РО" name="Name" value="@Model.Name">
    </div>
    <div class="form-group">
        <label for="l2">Путь к ЭДК</label>
        <input type="text" class="form-control" id="l2" aria-describedby="emailHelp" placeholder="Введите путь к ЭДК" name="ServerPath" value="@Model.ServerPath">
        <small id="emailHelp" class="form-text text-muted">С последним слэшом /</small>
    </div>
    <div class="form-group">
        <label for="l3">Часов от гринвича (UTC)</label>
        <input type="number" class="form-control" id="l3" aria-describedby="emailHelp1" name="UTCHours" value="@Model.UTCHours">
        <small id="emailHelp1" class="form-text text-muted">Укажите целое число часов от гринвича в этом регионе</small>
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
    <input type="hidden" value="@Model.TerritoryId" name="TerritoryId" />
}